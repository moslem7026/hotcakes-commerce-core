    <Type>
        <Title>Date (with jQuery DatePicker) - Obsolete</Title>
        <Name>datetime</Name>
        <Category>Date and Time</Category>
        <HelpText></HelpText>
        <TypeStr>avt.ActionForm.Core.Input.jQueryDatePicker,avt.ActionForm.Core</TypeStr>

      <JsIncludes>
        <Include>[jQueryUi]</Include>
      </JsIncludes>

        <Parameter>
            <Id>Value</Id>
            <Title>
                <Item key="default">Initially Checked</Item>
            </Title>
