[

    {
        "Id": "CSV",
        "Title": { "default": "Serialize to CSV" },
        "HelpText": { "default": "Serializes a list of entities from the context into CSV (Comma Separated Values) format." },
        "TypeStr": "DnnSharp.Common.Actions.Serialization.Csv, DnnSharp.Common.Actions",
        "Settings": {
            "Group": "Serialization",
            "Bulk": "True"
        },

        "Parameters": [{
                "For": "AGRID",
                "Id": "SpecialSerializationConditions",
                "Type": "StaticHelpText",
                "HelpText": {
                    "default": "<span class=\"label label-success\">HINT:</span> Manage the Grid Fields that will be serialized by using the [SpecialContext:SerializeCSV] token into a Field Condition. The most common scenario is to programmatically hide an entire column and append true only into the serialization context, such as: [MyCondition] == \"hide\" || [SpecialContext:SerializeCSV]. Another usefull token is [SpecialContext:None] that can be used to apply conditions programmatically on grid fields."
                }
            }, {
                "Id": "EntityName",
                "Title": { "default": "Entity Name" },
                "HelpText": { "default": "Determines which entities are serialized. Can contain <a href=\"http://www.dnnsharp.com/dnn/modules/my-custom-tokens\" target=\"_blank\">My Tokens</a>." },
                "Type": "Text"
            },

            {
                "Id": "Fields",
                "Title": { "default": "Fields" },
                "HelpText": { "default": "Provide a list of fields to serialize." },
                "Type": "NameValueCollection",
                "Settings": {
                    "NameColumn": "CSV Name",
                    "ValueColumn": "Value",
                    "ButtonName": "Add Field",
                    "ShowCondition": "!itemParameters['IncludeAllFields']"
                }
            },

            {
                "Id": "IncludeAllFields",
                "Title": { "default": "Include All Fields" },
                "HelpText": { "default": "Or, select this option to serialize all fields." },
                "Type": "Boolean"
            },

            {
                "Id": "RemoveFieldNames",
                "Title": { "default": "Remove Field Names" },
                "HelpText": { "default": "Remove the field names from the serialization." },
                "Type": "Boolean"
            },

            {
                "Id": "FieldSeparator",
                "Title": { "default": "Field Separator" },
                "HelpText": { "default": "Use semicolon if you open CSV Files with Excel and your region Format is set to other than English (United States). Left unselected , defaults to comma." },
                "Type": "Select",
                "Settings": {
                    "Items": {
                        "comma": { "default": ", i.e. comma" },
                        "semicolon": { "default": "; i.e. semicolon" },
                        "tab": { "default": "tab" }
                    },
                    "SupportsExpressions": "true"
                }
            },
            {
                "Id": "EncodingOption",
                "Title": {
                    "default": "Encoding"
                },
                "HelpText": {
                    "default": "Choose the Encoding option. Default is UTF-8."
                },
                "Type": "Select",
                "Settings": {
                    "DataSource": "DnnSharp.Common.Actions.Serialization.eEncoding, DnnSharp.Common.Actions"
                }
            },

            {
                "Id": "inlineSeparator",
                "Title": { "default": "Add inline separetor" },
                "HelpText": { "default": "Inserts 'sep=<spearator>' on the first line of Excel to specify '<spearator>' as a CSV separator." },
                "Type": "Boolean"
            },

            {
                "Id": "Criteria",
                "Title": { "default": "Criteria" },
                "HelpText": { "default": "Provide criteria to determine which entries are serialized." },
                "Type": "NameValueCollection",
                "Settings": {
                    "NameColumn": "Property",
                    "ValueColumn": "Value",
                    "ButtonName": "Add Criteria"
                }
            },

            {
                "Id": "Folder",
                "Title": { "default": "Folder" },
                "HelpText": { "default": "Folder to write the CSV file into." },
                "Type": "Select",
                "Settings": {
                    "DataSource": "PortalFolderList",
                    "SupportsExpressions": "true"
                }
            },

            {
                "Id": "Pattern",
                "Title": { "default": "Pattern" },
                "HelpText": {
                    "default": "Optionally provide a pattern to use for filenames on the server. For example &quot;[User:Username]-avatar&quot;. Leave blank to use the original filename. Supports <a href='http://www.dnnsharp.com/dnn/modules/my-custom-tokens' target='_blank' tabindex='-1'>My Tokens</a>"
                },
                "Type": "Text"
            },

            {
                "Id": "Duplicates",
                "Title": { "default": "Handle Duplicates" },
                "Type": "Select",
                "HelpText": { "default": "" },
                "Settings": {
                    "Items": {
                        "Overwrite": { "default": "Overwrite" },
                        "Rename": { "default": "Rename" }
                    }
                }
            },
            {
                "Id": "StoreAbsoluteURL",
                "Title": { "default": "Store Absolute URL" },
                "HelpText": { "default": "Optionally provide a token name where to Store Absolute URL. The token can be used in next actions down the stack." },
                "Type": "Text"
            },
            {
                "Id": "StoreRelativeURL",
                "Title": { "default": "Store Relative URL" },
                "HelpText": { "default": "Optionally provide a token name where to Store Relative URL. The token can be used in next actions down the stack." },
                "Type": "Text"
            },
            {
                "Id": "StorePhysicalPath",
                "Title": { "default": "Store Physical Path" },
                "HelpText": { "default": "Optionally provide a token name where to Store Physical Path. The token can be used in next actions down the stack." },
                "Type": "Text"
            },
            {
                "Id": "StoreLinkClick",
                "Title": {
                    "default": "Store LinkClick Url"
                },
                "Type": "Text",
                "HelpText": {
                    "default": "Optionally provide a token name where to Store the LinkClick Url. The token can be used in next actions down the stack."
                    }
             },
             {
                "Id": "DisableForceDownload",
                "Title": {
                  "default": "Disable Force Download"
                },
                "HelpText": {
                    "default": "Disables LinkClick URL force download feature."
                    },
                "Type": "Boolean"
              }

        ]
    }
]